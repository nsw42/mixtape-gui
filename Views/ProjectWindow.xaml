<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="PlaylistEditor.Views.ProjectWindow"
        Title="AvaloniaAppTemplate">
  <Grid Margin="2" ShowGridLines="True">
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="300"/>
      <ColumnDefinition Width="Auto"/>
      <ColumnDefinition Width="*"/>
    </Grid.ColumnDefinitions>

    <!-- Left column: the list of files -->
    <DockPanel Grid.Column="0" VerticalAlignment="Stretch">
      <!-- bg {DynamicResource SystemAccentColorDark1} -->
      <Border DockPanel.Dock="Bottom"
              Background="Blue" Padding="16"
              DragDrop.AllowDrop="True">
        <TextBlock HorizontalAlignment="Center" Name="FileDropArea">Add file(s)</TextBlock>
      </Border>

      <Canvas Background="Red" DockPanel.Dock="Top"/>  <!-- LastChildFill=True so this expands -->
    </DockPanel>

    <GridSplitter HorizontalAlignment="Right"
                  VerticalAlignment="Stretch"
                  Grid.Column="1"  Width="5" Background="Transparent" />

    <!-- Right column: the playlist -->
    <Canvas Grid.Column="2" Background="Green"/>
  </Grid>
</Window>
